.admin.dropdown
  = link_to '#', data: { toggle: 'dropdown' }, class: 'glyph' do
    span(data-toggle="tooltip" title="#{t('actions_and_options')}")
      = render partial: 'layouts/campfire'

  .dropdown-menu.dropdown-menu-right
    = link_to edit_event_path(@event), class: 'dropdown-item' do
      i.fa-tree.fal
      = t('events.edit')

    = link_to new_event_event_submission_path(@event), class: 'dropdown-item' do
      i.fa-tree.fal
      = t('submissions.upload')

    = link_to new_event_event_registration_path(@event), class: 'dropdown-item' do
      i.fa-tree.fal
      = t('registrations.add')

    = link_to new_event_event_requirement_path(@event, type: 'document'), class: 'dropdown-item' do
      i.fa-tree.fal
      = t('events.add_requirement.document')

    = link_to new_event_event_requirement_path(@event, type: 'fee'), class: 'dropdown-item' do
      i.fa-tree.fal
      = t('events.add_requirement.payment')

javascript:
  $(function () {
    $('[data-toggle="tooltip"]').tooltip();
  });
