- new_folder = @unit.document_library_items.new(type: 'DocumentLibraryFolder')

.actions
  ul
  	li = link_to 'Upload', new_unit_document_library_item_path(@unit), class: 'btn btn-primary'
  	li = link_to '#new_folder', data: { toggle: 'modal' } do
  	  i.fa-folder-plus.fas
  	  | New Folder

#new_folder.modal
  .modal-dialog
    .modal-content
      = form_for [@unit.becomes(Unit), new_folder.becomes(DocumentLibraryItem)] do |f|
        .modal-header
          h5.modal-title New Folder
          button.close(data-dismiss="modal")
            span &times;
        .modal-body
          .form-group
            = label_tag :name
            = f.text_field :name, class: 'form-control'

        .modal-footer
          button.btn.btn-secondary(data-dismiss="modal") = t('cancel')
          = f.hidden_field :type
          = f.submit 'Add New Folder', class: 'btn btn-primary'
