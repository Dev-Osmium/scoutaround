- crumbtrail link_to UnitPresenter.unit_display_name(@unit), unit_path(@unit)
- crumbtrail link_to t('memberships.title_alt'), unit_memberships_path(@unit)
- crumbtrail link_to @user.full_name, unit_membership_path(@unit, @membership)
- crumbtrail t('memberships.update')

.row
  .col-md-2
  .col-md-8
    - if @membership.errors.full_messages.any?
      ul
        - @membership.errors.full_messages.each do |error_message|
          li = error_message

    h1 = t('memberships.edit')

    = render partial: 'form'
